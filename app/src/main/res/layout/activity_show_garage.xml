<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ShowGarageActivity">

    <View
        android:id="@+id/view_carde_garage"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        android:background="@drawable/round_border_below"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_photo_user"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@id/view_carde_garage"
        app:layout_constraintEnd_toEndOf="@id/view_carde_garage"
        app:layout_constraintStart_toStartOf="@id/view_carde_garage"
        app:layout_constraintTop_toTopOf="@id/view_carde_garage"
        app:tint="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@id/view_carde_garage"
        app:layout_constraintStart_toStartOf="@id/view_carde_garage"
        app:layout_constraintTop_toBottomOf="@id/img_photo_user"
        tools:text="Rodrigo Santos" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:text="EndereÃ§o"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_carde_garage" />

    <TextView
        android:id="@+id/text_garage_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_address"
        tools:text="Rua Frei Fracisco" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_address"
        app:layout_constraintStart_toStartOf="@id/text_address"
        app:layout_constraintEnd_toEndOf="@id/text_garage_address"
        android:background="@color/gray_200"/>

    <TextView
        android:id="@+id/text_horarioInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Horario"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/text_address"
        app:layout_constraintTop_toBottomOf="@id/text_address" />

    <TextView
        android:id="@+id/text_garage_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/text_garage_address"
        app:layout_constraintTop_toTopOf="@id/text_horarioInicio"
        tools:text="8:00 - 22:00" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_horarioInicio"
        app:layout_constraintStart_toStartOf="@id/text_horarioInicio"
        app:layout_constraintEnd_toEndOf="@id/text_garage_horario"
        android:background="@color/gray_200"/>

    <TextView
        android:id="@+id/text_valorHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Valor Hora"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/text_horarioInicio"
        app:layout_constraintTop_toBottomOf="@id/text_horarioInicio" />

    <TextView
        android:id="@+id/text_garage_valorHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/text_garage_horario"
        app:layout_constraintTop_toTopOf="@id/text_valorHora"
        tools:text="R$ 20,00" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_valorHora"
        app:layout_constraintStart_toStartOf="@id/text_valorHora"
        app:layout_constraintEnd_toEndOf="@id/text_garage_valorHora"
        android:background="@color/gray_200"/>

    <TextView
        android:id="@+id/text_valor_adicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Valor Adicional"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/text_valorHora"
        app:layout_constraintTop_toBottomOf="@id/text_valorHora" />

    <TextView
        android:id="@+id/text_garage_valor_adicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/text_garage_valorHora"
        app:layout_constraintTop_toTopOf="@id/text_valor_adicional"
        tools:text="R$ 5,00" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_valor_adicional"
        app:layout_constraintStart_toStartOf="@id/text_valor_adicional"
        app:layout_constraintEnd_toEndOf="@id/text_garage_valor_adicional"
        android:background="@color/gray_200"/>

    <TextView
        android:id="@+id/text_size_garage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Tamanho da Vaga"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/text_valor_adicional"
        app:layout_constraintTop_toBottomOf="@id/text_valor_adicional" />

    <TextView
        android:id="@+id/text_garage_size_garage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/text_garage_valor_adicional"
        app:layout_constraintTop_toTopOf="@id/text_size_garage"
        tools:text="Altura: 2 Largura: 2" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_size_garage"
        app:layout_constraintStart_toStartOf="@id/text_size_garage"
        app:layout_constraintEnd_toEndOf="@id/text_garage_size_garage"
        android:background="@color/gray_200"/>

    <TextView
        android:id="@+id/text_cobertura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_garage_size_garage"
        android:layout_alignStart="@id/text_garage_size_garage"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Cobertura"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/text_size_garage"
        app:layout_constraintTop_toBottomOf="@id/text_size_garage" />

    <TextView
        android:id="@+id/text_garage_cobertura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/text_garage_size_garage"
        app:layout_constraintTop_toTopOf="@id/text_cobertura"
        tools:text="Sim" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_cobertura"
        app:layout_constraintStart_toStartOf="@id/text_cobertura"
        app:layout_constraintEnd_toEndOf="@id/text_garage_cobertura"
        android:background="@color/gray_200"/>

    <TextView
        android:id="@+id/text_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Horario de entrada"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/text_cobertura"
        app:layout_constraintTop_toBottomOf="@id/text_cobertura" />

    <TextView
        android:id="@+id/text_time_garage_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Inicio"
        android:textColor="@color/gray_200"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/text_garage_cobertura"
        app:layout_constraintTop_toTopOf="@id/text_start_time" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_start_time"
        app:layout_constraintStart_toStartOf="@id/text_start_time"
        app:layout_constraintEnd_toEndOf="@id/text_time_garage_start"
        android:background="@color/gray_200"/>

    <TextView
        android:id="@+id/text_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Horario de Saida"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/text_start_time"
        app:layout_constraintTop_toBottomOf="@id/text_start_time" />

    <TextView
        android:id="@+id/text_time_garage_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Saida"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/gray_200"
        app:layout_constraintEnd_toEndOf="@id/text_time_garage_start"
        app:layout_constraintTop_toTopOf="@id/text_end_time" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/text_end_time"
        app:layout_constraintStart_toStartOf="@id/text_end_time"
        app:layout_constraintEnd_toEndOf="@id/text_time_garage_end"
        android:background="@color/gray_200"/>


    <TextView
        android:id="@+id/text_erro_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_black_italic"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/button_vaga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Erro" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_vaga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/round_border_button"
        android:fontFamily="@font/roboto_bold"
        android:padding="16dp"
        android:text="Reservar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>